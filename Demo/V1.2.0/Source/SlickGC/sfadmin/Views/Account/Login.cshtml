@model SfAdmin.Biz.Entity.LoginUser

<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <title>Login</title>
    <link rel="stylesheet" href="~/Content/bootstrap/bootstrap-3.3.7.min.css" />
    <link rel="stylesheet" href="~/Content/loginstyle.css" />
</head>

<body>
    <div class="wrapper">
        <form id="myLoginForm" class="form-signin form-horizontal" action="Login" method="post" role="form">
            <h2 class="form-signin-heading">请登录</h2>
            <div class="l_mistake" style="display:none" id="divLoginError">
                @Html.DisplayTextFor(m => m.ErrorMessage)
            </div>

            <input type="text" class="form-control" name="loginname" placeholder="管理员名称" required="" autofocus="" />
            <input type="password" class="form-control" name="password" placeholder="密码" required="" />
            <label class="checkbox">
                <input type="checkbox" value="remember-me" id="rememberMe" name="rememberMe"> Remember me
            </label>
            <input class="btn btn-lg btn-primary btn-block" type="submit" value="Login" />
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
        </form>
    </div>

    <!-- Hidden -->
    @Html.Hidden("hdnWebLogonUserTicket", ViewData["Ticket"])
    <!-- Hidden End-->

    <script type="text/javascript" src="~/Scripts/jquery/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src="~/ViewJS/account.js"></script>

    <script type="text/javascript">
        $(function () {
            accountmgr.init();
        });
    </script>
    
</body>
</html>